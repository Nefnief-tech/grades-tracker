# Grade Tracker Mobile API Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-appwrite-project-id
APPWRITE_API_KEY=your-appwrite-api-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
API_RATE_LIMIT=100
ENCRYPTION_RATE_LIMIT=20

# Encryption Configuration
WEB_ENCRYPTION_PBKDF2_ITERATIONS=10000
MOBILE_ENCRYPTION_KEY_LENGTH=32

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=api.log

# Database Configuration (if using additional database)
DB_CONNECTION_STRING=optional-database-url

# Optional: Additional Security
API_KEY_REQUIRED=false
API_KEY=optional-api-key-for-additional-security
# Appwrite Configuration - REQUIRED for cloud features
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your-project-id-here

# Appwrite Database Configuration - REQUIRED for cloud features
NEXT_PUBLIC_APPWRITE_DATABASE_ID=your-database-id-here
NEXT_PUBLIC_APPWRITE_USERS_COLLECTION_ID=your-users-collection-id-here
NEXT_PUBLIC_APPWRITE_SUBJECTS_COLLECTION_ID=your-subjects-collection-id-here
NEXT_PUBLIC_APPWRITE_GRADES_COLLECTION_ID=your-grades-collection-id-here
NEXT_PUBLIC_APPWRITE_POMODORO_COLLECTION_ID=your-pomodoro-collection-id-here

# Feature Flags
NEXT_PUBLIC_ENABLE_CLOUD_FEATURES=true
NEXT_PUBLIC_ENABLE_ENCRYPTION=true
NEXT_PUBLIC_DEBUG=false

# Analytics (optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your-domain.com
NEXT_PUBLIC_PLAUSIBLE_URL=https://plausible-url.com
